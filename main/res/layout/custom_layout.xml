<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/nombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:textColor="#101010"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
       />

    <TextView
        android:id="@+id/precioProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nombreProducto"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="#101010"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
         />

    <Button
        android:id="@+id/verProd"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/agregarAlCarrito"
        android:drawableEnd="@drawable/verprod"
        android:backgroundTint="#a3a3a3"
        />

    <Button
        android:id="@+id/agregarAlCarrito"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:drawableEnd="@drawable/agregarprod"
        android:backgroundTint="@color/yellow"
        />

</RelativeLayout>