<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/nombreProductoCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_below="@+id/descripcionTitulo"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/cantidadDeProductoCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_below="@+id/descripcionPrecio"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/precioProductoCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/descripcionCantidad"
            android:layout_toLeftOf="@+id/eliminarDelCarrito"
            android:layout_marginRight="10dp"
            />
        <ImageButton
            android:id="@+id/eliminarDelCarrito"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_delete"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />
        <ImageButton
            android:id="@+id/aumentarCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cantidadDeProductoCarrito"
            android:src="@android:drawable/arrow_up_float"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/grey"
            />
        <ImageButton
            android:id="@+id/disminuirCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cantidadDeProductoCarrito"
            android:layout_below="@+id/aumentarCantidad"
            android:src="@android:drawable/arrow_down_float"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/grey"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>